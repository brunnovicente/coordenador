<style>
    .linha:hover{
        background-color: #DCDCDC;
    }
</style>

<nav class="my-2 p-2 navbar navbar-light bg-light">
    <h4 class="text-danger"><i class="fas fa-folder"></i> Minhas Solicitações</h4>
    <ul class="nav justify-content-end">
        <li class="nav-item">
            <form method="post" action="/diario/listar">
                <input value="{{professor.siape}}" hidden="hidden" name="siape" id="siape">
                <button type="submit" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-chevron-left"></i> Voltar</button>
            </form>
        </li>
    </ul>
</nav>
{{#each solicitacoes}}
    <div class="container-fluid border border-1 rounded rounded-2 my-3 p-2 linha shadow">
        <div class="row p-0">
            <div class="col-4">
                <h5><strong>DIÁRIO: </strong> <br>{{diario.descricao}}</h5>
            </div>

            <div class="col-2">
                <h5>
                    <strong>DATA: </strong><br>
                    {{formatDate data}}
                </h5>
            </div>

            <div class="col-2">
                <h5><strong>DIA: </strong> <br>{{dia}}</h5>
            </div>

            <div class="col-2">
                <h5><strong>HORÁRIO: </strong> <br>{{horarios}}</h5>
            </div>

            <div class="col-1">
                <h5>
                    <strong>STATUS:</strong><br>
                    <span id="status{{id}}"></span>
                    <script>
                        var span_status = document.getElementById('status{{id}}')
                        var status = {{status}}
                        if(status == 0){
                            span_status.innerText = 'Pendente'
                            span_status.classList = 'text-danger'
                        }else if(status == 1){
                            span_status.innerText = 'Aberta'
                            span_status.classList = 'text-primary'
                        }else{
                            span_status.innerText = 'Fechada'
                            span_status.classList = 'text-success'
                        }
                    </script>
                </h5>
            </div>
            <div class="col-1">
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a href="#" class="btn btn-sm btn-outline-dark"><i class="fa-regular fa-bell"></i> Lembrete</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="border-bottom my-1"></div>
        <div class="row p-1">
            <div class="col">
                <strong>JUSTIFICATIVA</strong>
                <p>
                    {{justificativa}}
                </p>
            </div>
            <div class="col">
                <strong>PROFESSOR</strong>
                <p>
                    {{diario.professore.nome}}
                </p>
            </div>

            <div class="col">
                <strong>TIPO</strong>
                <p>
                    {{tipo}}
                </p>
            </div>

        </div>
    </div>
{{/each}}
